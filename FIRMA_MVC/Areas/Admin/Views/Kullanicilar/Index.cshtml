@using FIRMA_MVC.Models;
@model IEnumerable<KULLANICI>
@{
    ViewBag.Title = "Index";
    string veri = ViewData["veri"].ToString();
}

<div id="arama">
        <form action="/Admin/Kullanicilar/Search" method="post">
            <label>Ara</label>
            <input type="text" name="txtAra" placeholder="Kullanıcı adı giriniz:" value="@veri" />
            <input type="submit" value="Ara" class="button" />
            <span class="lnkbutton">
                <a href="/Admin/Kullanicilar/Create">Yeni</a>
            </span>

        </form>
</div>

<div id="liste">
    <table>
        <tr>
            <td>Sil</td>
            <td>@Html.DisplayNameFor(model => model.KULLANICI_REFNO)</td>
            <td>@Html.DisplayNameFor(model => model.KULLANICI_ADI)</td>
            <td>@Html.DisplayNameFor(model => model.PAROLA)</td>
        </tr>


        @foreach (var item in Model)
        {
            <tr>
            <td>
                @*<a href="/Admin/Kullanicilar/Index"@item.KULLANICI_REFNO>Sil</a>*@
                @Html.ActionLink("Sil", "Delete", new { id = item.KULLANICI_REFNO })
            </td>
        
            <td>@Html.DisplayFor(model => item.KULLANICI_REFNO)</td>
            <td>
                @Html.ActionLink(item.KULLANICI_ADI, "Create", new { id = item.KULLANICI_REFNO })
            </td>

            <td>@Html.DisplayFor(model => item.PAROLA)</td>
    </tr>
        }
    </table>
</div>


